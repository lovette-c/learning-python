#Loops & Iterations - For/While Loops

nums = [1, 2, 3, 4, 5]

#Break (stop) loop after condition
for num in nums:
    if num ==3:
        print('Found!')
        break
    print(num)

#Continue loop after condition
for num in nums:
    if num ==3:
        print('Found!')
        continue
    print(num)

#Loop in loop
for num in nums:
    for letter in 'abc':
        print(num, letter)

#Range
for i in range(10):
    print(i)

for b in range(1, 11):
    print(b)

#While
x = 0
while x <10:
    print(x)
    x += 1
    if x ==5:
        break
    
  
